<body topmargin="0" bottommargin="0" id="HomePage">
<center>
<%= render 'partials/sheader' %>
<div class="center">
<div class="GlobCtrCC">
<div class="innerBody">
<div class="Header">
</div>
<div class="Navigation">
    <ul><li><%= link_to 'Home', root_url %></li><li><%= link_to 'Blog', posts_path %></li><li><%= link_to 'Announcements', announcements_path %></li><li><a class="lastrow" href="/about/index">About Us</a></li></ul>
</div>
<div class="InnerContent">
<div class="LeftContent">
<div class="PadLeft">
<h1>SAHM Central Blog Posts</h1>

<% all_posts = Post.all(:order => "created_at DESC")%>
<% all_posts.each do |post| %>
<div class="PadTop">
	<div class="FloatRight">
		<h5><%=h post.created_at.strftime("%B %d, %Y") %></h5>
	</div>
    <h3><%= link_to post.title, post %></h3>
    <div style="padding-top:5px;" ><%= render :text => post.content.slice(0,200).concat("...").gsub!(/(<[^>]*>)|\n|\t/s) {" "} %></div>

</div>
<% end %>
</table>
</div>
 </div>
<%= render 'partials/scolumn2' %>
</div>
<%= render 'partials/sfooter' %>
</div>
</div>
</div>
</center>
</body>