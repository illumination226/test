xml.instruct!
xml.urlset "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
    xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
      xml.loc "http://www.sahmcentral.com"
    end
	xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
	  xml.loc "http://www.sahmcentral.com/posts"
	end    
	xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
	  xml.loc "http://www.sahmcentral.com/announcements"
	end    	
	xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
	  xml.loc "http://www.sahmcentral.com/surveys/new"
	end  	
	xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
	  xml.loc "http://www.sahmcentral.com/about"
	end  	
	xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
	  xml.loc "http://www.sahmcentral.com/sitemap/index"
	end 	
  @posts.each do |post|
    xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
      xml.loc "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" "http://www.sahmcentral.com" + url_for(post)
      xml.lastmod "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" post.updated_at.to_date
    end
  end
  @announcements.each do |announcement|
    xml.url "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" do
      xml.loc "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" "http://www.sahmcentral.com" + url_for(announcement)
      xml.lastmod "xmlns" => "http://www.sitemaps.org/schemas/sitemap/0.9" announcement.updated_at.to_date
    end
  end  
end